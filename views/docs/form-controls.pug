include ../includes/header.pug
.wrapper
  include ../includes/leftnav-docs.pug
  
  #content.unfolded(name='form-controls')
    .board.full-width
      h1.uppercase form controls
      .devider
      .content-wrapper
        h2.margin Input box
        .form-group
          label DEFAULT INPUT BOX
          input(type='text', value='', placeholder='Place Holder')
        .form-group
          label TOOLTIP
            .tooltip.icon           
              .desc 도움이 될만한 팁을 여기에 적어주세요. 한줄 또는 여러줄도 가능합니다.              
                a(href='#').link 링크
                | 도 활용 가능합니다.
          input(type='text', value='', placeholder='Place Holder')            
        .form-group
          label INNER BUTTON
          input(type='text', value='', placeholder='Place Holder')
          .inner-text-wrapper
            a.inner-text.link(href='javascript:') button
        .form-group
          label INNER TEXT
          input(type='text', value='', placeholder='Place Holder')
          .inner-text-wrapper
            .inner-text.link(href='javascript:') text here
        .form-group
          label DISABLED INPUT BOX
          input(type='text', value='Some delicate data value here', disabled)
      
        .devider
            
        h2.margin Select box
        .form-group
          .form-group
            label LABEL  
            .select-wrapper
              select
                option option 1
                option option 2
                option option 3
                option option 4
        
        .devider
        
        h2.margin Text area
        .form-group          
          label LABEL
          textarea(rows='4', value='', placeholder='Place Holder')
            
        .devider
        
        h2.margin Boxed label - Full width
        .form-group          
          .box-label
            label INPUT
            input(type='text', value='', placeholder='Place Holder')
        .form-group          
          .box-label
            label SELECT
            .select-wrapper
              select
                option option 1
                option option 2
                option option 3
                option option 4
        
        .devider
        
        h2.margin Colum example
        .row
          .form-group.col-2-left
            label LEFT
            input(type='text', value='', placeholder='Place Holder')
          .form-group.col-2-right
            label RIGHT
            input(type='text', value='', placeholder='Place Holder')
          .clear-fix
        
        .devider
        
        h2.margin inline form group
        .form-group.form-inline
          label INPUT
          input(type='text', value='', placeholder='Place Holder')          
          a.btn BUTTON
        .form-group.form-inline
          label SELECT
          .select-wrapper
            select
              option option 1
              option option 2
              option option 3
              option option 4
          a.btn BUTTON
        .form-group.form-inline
          label LABEL
          input(type='text', value='', size='50', placeholder='size="50"')
          a.btn BUTTON          
                   
