include includes/header.pug
body
  include includes/topbar.pug
  .wrapper    
    include includes/leftnav.pug
    
    #content.unfolded(name='room-manage')
      .left-wrapper
        #sub-menu
          h4.title 
            img.icon(src='/images/icons/door-black.svg')
            | 객실관리
          ul
            li.active 디럭스룸
            li  트윈룸
            li  스위트룸
            li  여성4인 도미토리        
          .padding(style='padding-top:0; margin-left:10px')
            a.link.text-small(href='javascript:') + 객실타입추가
      .board
        .title-bar
          h4 디럭스룸
        .sub-left
          ul
            li
              a.active(href='#') 기본정보
            li
              a(href='#') 날짜별 가격             
        .sub-content
          .content-wrapper
            .row
              .form-group.col-2-left
                label 객실타입 이름
                input(type='text', placeholder='예) 더블룸, 가족룸, 여성4인 도미토리')
              .form-group.col-2-right
                label 
                  | 형태
                  .tooltip.icon                  
                    .desc 도미토리는 침대별 재고관리가 가능합니다.
                .select-wrapper
                  select
                    option 선택하세요
                    option 일반룸
                    option 독채형
                    option 도미토리
            .clear-fix
              
            .row
              .form-group.col-2-left
                label 기준인원
                input(type='text', value='2')
              .form-group.col-2-right
                label 최대인원
                input(type='text', value='4')
            .row
              .form-group.col-2-left
                label 성인 1인당 추가가격
                input(type='text', value='₩ 20,000')
              .form-group.col-2-right
                label 아동 1인당 추가가격
                input(type='text', value='₩ 10,000')      
            .row
              .form-group.col-2-left
                label 기본가격
                input(type='text', value='₩ 130,000')              
              .form-group.col-2-right
                label 요일별 가격
                .box-label.bottom-collapse
                  label 일요일
                  input(type='text', value='₩130,000')
                .box-label.bottom-collapse
                  label 월요일
                  input(type='text', value='₩130,000')
                .box-label.bottom-collapse
                  label 화요일
                  input(type='text', value='₩130,000')
                .box-label.bottom-collapse
                  label 수요일
                  input(type='text', value='₩130,000')
                .box-label.bottom-collapse
                  label 목요일
                  input(type='text', value='₩130,000')
                .box-label.bottom-collapse
                  label.text-red 금요일
                  input(type='text', value='₩180,000')
                  .inner-text-wrapper
                    .inner-text.text-small +60,000
                .box-label.bottom-collapse
                  label.text-red 토요일
                  input(type='text', value='₩180,000')
                  .inner-text-wrapper
                    .inner-text.text-small +60,000
              .clear-fix
            
              table.table.no-border
                thead
                  tr
                    th.text-center(style='width: 50px') 순서
                    th.text-center 객실명
                    th
                tbody
                  tr(draggable='true')
                    td.reorder.text-center
                      h2.font-normal 1
                      i.fa.fa-bars.orderbtn
                    td
                      .form-group.small.no-margin
                        input(type='text', value='객실 1')
